<resources>

    <style name="Base.Theme.NearByApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorAccent">@color/purple_main</item>
        <item name="primaryTextColor">@color/primary_black</item>
        <item name="secondaryTextColor">@color/secondary_black</item>
        <item name="textEntryBackground">@color/grey_2</item>
    </style>

    <style name="Theme.NearByApp" parent="Base.Theme.NearByApp" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_icon_round</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.NearByApp</item>
    </style>

</resources>