<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.NearByApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorAccent">@color/purple_main_night</item>
        <item name="primaryTextColor">@color/white_alternative</item>
        <item name="secondaryTextColor">@color/white_bg</item>
        <item name="textEntryBackground">@color/secondary_black</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_icon_round</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.NearByApp</item>  # Required.
    </style>
</resources>