<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BookShelfApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="grey1color">@color/grey_1_night</item>
        <item name="grey2color">@color/grey_2_night</item>
        <item name="android:colorAccent">@color/purple_main_night</item>
        <item name="colorPrimary">@color/purple_main_night</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="textHighlightColor">@color/color_highlight_night</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/primary_black</item>
        <item name="android:textColorLink">@color/white_alternative</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white_alternative</item>
        <item name="android:colorBackground">@color/primary_black</item>
        <item name="colorSurface">@color/primary_black</item>
        <item name="snackBarSurface">@color/white</item>
        <item name="primaryTextColor">@color/white_alternative</item>
        <item name="secondaryTextColor">@color/white_bg</item>
        <item name="miniPlayerTextColor">@color/grey_1</item>
        <item name="actionTextColor">@color/purple_main_night</item>
        <item name="textEntryBackground">@color/secondary_black</item>
        <item name="transparentBackground">@color/transparent_white</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_icon_round</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.BookShelfApp</item>  # Required.
    </style>
</resources>